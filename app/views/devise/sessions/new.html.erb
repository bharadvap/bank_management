<body class="login-inverse">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"form-signin"}) do |f| %>
          <div class="login-panel panel panel-default top30">
            <div class="panel-heading">
              <h3 class="panel-title">Sign in</h3>
            </div>
            <div class="panel-body">
              <form class="form-signin" action="#" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="âœ“">
               <input type="hidden" name="authenticity_token" value="#">
                <fieldset>
                   <div class="form-group">
                      <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "Email", required: :required %>
                   </div>
                   <div class="form-group">
                      <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder: "Password", required: :required %>
                   </div>
                   <div class="checkbox">
                     <label>
                       <input type="checkbox" name="remember_me" id="remember_me" value="1"> Remember me?
                     </label>
                   </div>
                   <%= f.submit "Login", class:"btn btn-primary btn-block" %><br>
                   <p>
                    <%= link_to "Forgot password?" , new_user_password_path %> &nbsp &nbsp
                    <%= link_to "Sign Up", new_user_registration_path %></p>
                </fieldset>
              </form> 
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
<body class="login-inverse">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post,class:"form-signin"}) do |f| %>
          <%= devise_error_messages! %>
          <div class="login-panel panel panel-default top30">
            <div class="panel-heading">
              <h3 class="panel-title">Forgot your password?</h3>
            </div>
            <div class="panel-body">
              <form class="form-signin" action="#" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="âœ“">
               <input type="hidden" name="authenticity_token" value="#">
                  <fieldset>
                     <div class="form-group">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "Email", required: :required %>
                     </div>
                     
                     <%= f.submit "Send me reset password instructions", class:"btn  btn-primary btn-block"%><br>
                  </fieldset>
                    <a href="<%=user_session_path%>"> Signin?</a>
              </form> 
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>